//
/*
if (place_meeting(x,y+vsp, obj_wall) &amp;&amp; vsp != 0)
{
    while (!place_meeting(x,y+sign(vsp), obj_wall))
    {
        vsp += sign(vsp);
    }
    vsp = 0;
}*/
y += vsp;
depth = -y + 1;

///Control our Hat and Weapons
if (global.powerUpHat == true)
{
    //sets hat xScale to our xscale;
    obj_magaHat.image_xscale = image_xscale;
    if (image_xscale == 1)
    {
        //move hat in correct dir.
        obj_magaHat.x = x + xHatOffset;
    }
    else if (image_xscale == -1)
    {
        //move hat in correct dir.
        obj_magaHat.x = x - xHatOffset;
    }
    
    obj_magaHat.y = y + yHatOffset;
    obj_magaHat.depth = -y;
}




